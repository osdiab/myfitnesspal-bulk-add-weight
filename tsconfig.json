// configuration for source code for dev and build (can't require from tests)
{
    "compilerOptions": {
        // output config
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "outDir": "./dist/",
        "declaration": true,
        // strict rules
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        // allow tests to refer to this project
        "composite": true
    },
    "include": [
        "src"
    ]
}